---
import Button from '@components/modules/Button.astro';

interface Props {
    items?: Array<string>;
    title?: string;
    note?: string;
    class?: string;
    [x: string]: any;
}

const {
    items = [],
    title = 'Как участвовать?',
    note,
    class: className,
    ...rest
} = Astro.props;

---

<section class="lootery-instructions lootery-section">
    <h2 class="lootery-instructions__title lootery-section__title">{title}</h2>
    <div class="lootery-instructions__list">
        {items.map((item) => (
            <div class="item-instruction">
                    <div class="item-instruction__title" set:html={item.title}></div>
                    <div class="item-instruction__num">{item.num}</div>
                    <div class="item-instruction__descr" set:html={item.text}></div>
                    <div class="item-instruction__footer">
                        <Button type="link" href="#" style="light">{item.buttonText}</Button>
                    </div>
            </div>
        ))}
    </div>
    <div class="lootery-instructions__note">
        <span class="lootery-instructions__note-icon">
            <svg width="40" height="40" viewBox="0 0 40 40" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M20 5C32 5 35 8 35 20C35 32 32 35 20 35C8 35 5 32 5 20C5 8 8 5 20 5Z" stroke="#255FE4" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                <path d="M20 13.3333V19.9999" stroke="#255FE4" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                <path d="M20 26.6667H20.0158" stroke="#255FE4" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
        </span>
        <div class="lootery-instructions__note-text" set:html={note}></div>
    </div>
</section>
