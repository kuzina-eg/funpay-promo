---
import Button from '@components/modules/Button.astro';
import Picture from '@components/modules/Picture.astro';

interface Props {
    title?: string;
    text?: string;
    buttonText?: string;
    buttonTextLogin?: string;
    statisticTextStart?: string;
    statisticTextLink?: string;
    statisticTextLast?: string;
    statisticValue?: string;
    countdownTitle?: string;
    countdownDays?: string;
    countdownHours?: string;
    countdownMinutes?: string;
    isLogin?: boolean;
}

const {
    title,
    text,
    buttonText,
    buttonTextLogin,
    statisticTextStart,
    statisticTextLink,
    statisticTextLast,
    statisticValue,
    countdownTitle,
    countdownDays,
    countdownHours,
    countdownMinutes,
    isLogin = false,
    class: className,
    ...rest
} = Astro.props;

---

<section
    class:list={[
        className,
        'lootery-promo',
    ]}
    {...rest}
>
    <div class="lootery-promo__container container">
        <div class="lootery-promo__note">
            <Fragment>{statisticTextStart}</Fragment>
            <span class="ticket-text">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M14 6C14 6.55228 14.4477 7 15 7C15.5523 7 16 6.55228 16 6V5H19C19.5304 5 20.039 5.21086 20.4141 5.58594C20.7891 5.96101 21 6.46957 21 7V10C20.4696 10 19.961 10.2109 19.5859 10.5859C19.2109 10.961 19 11.4696 19 12C19 12.5304 19.2109 13.039 19.5859 13.4141C19.961 13.7891 20.4696 14 21 14V17C21 17.5304 20.7891 18.039 20.4141 18.4141C20.039 18.7891 19.5304 19 19 19H16V18C16 17.4477 15.5523 17 15 17C14.4477 17 14 17.4477 14 18V19H5C4.46957 19 3.96101 18.7891 3.58594 18.4141C3.21086 18.039 3 17.5304 3 17V14C3.53043 14 4.03899 13.7891 4.41406 13.4141C4.78914 13.039 5 12.5304 5 12C5 11.4696 4.78914 10.961 4.41406 10.5859C4.03899 10.2109 3.53043 10 3 10V7C3 6.46957 3.21086 5.96101 3.58594 5.58594C3.96101 5.21086 4.46957 5 5 5H14V6ZM15 14C14.4477 14 14 14.4477 14 15C14 15.5523 14.4477 16 15 16C15.5523 16 16 15.5523 16 15C16 14.4477 15.5523 14 15 14ZM15 11C14.4477 11 14 11.4477 14 12C14 12.5523 14.4477 13 15 13C15.5523 13 16 12.5523 16 12C16 11.4477 15.5523 11 15 11ZM15 8C14.4477 8 14 8.44772 14 9C14 9.55228 14.4477 10 15 10C15.5523 10 16 9.55228 16 9C16 8.44772 15.5523 8 15 8Z" fill="#255FE4"/>
                </svg>
                <Fragment>{statisticTextLink}</Fragment>
            </span>
            <Fragment>{statisticTextLast}</Fragment>
            <strong>{statisticValue}</strong>
        </div>
        <h1 class="lootery-promo__title" set:html={title}></h1>
        <div class="lootery-promo__descr" set:html={text}></div>
        <div class="lootery-promo__button">
            {
                isLogin ?
                    <Button type="link" href="#tickets" style="second" center="true" size="lg">{buttonTextLogin}</Button>
                :
                    <Button type="submit" href="#" center="true" size="lg">{buttonText}</Button>
            }
        </div>
        <div class="lootery-promo__photo">
            <div class="lootery-promo__bg"></div>
            <Picture
                class="lootery-promo__image"
                name="promo"
                directory="img/lootery/promo/"
                type="png"
                imageWidth="1561"
                imageHeight="560"
                sourceMobile='<source type="image/webp" srcset="img/lootery/promo/promo-mobile@2x.webp 2x" media="(max-width: 767px)">'
            ></Picture>
        </div>

        <div class="lootery-countdown">
            <div class="lootery-countdown__title">{countdownTitle}</div>
            <div class="lootery-countdown__row js-countdown">
                <div class="lootery-countdown__item">
                    <span class="lootery-countdown__item-num js-days">20</span>
                    <span class="lootery-countdown__item-text">{countdownDays}</span>
                </div>
                <div class="lootery-countdown__item">
                    <span class="lootery-countdown__item-num js-hours">15</span>
                    <span class="lootery-countdown__item-text">{countdownHours}</span>
                </div>
                <div class="lootery-countdown__item">
                    <span class="lootery-countdown__item-num js-minutes">40</span>
                    <span class="lootery-countdown__item-text">{countdownMinutes}</span>
                </div>
            </div>
        </div>
    </div>
</section>
