        <Instructions
            title="How to Join?"
            items={instructions}
            note="Note: Only purchases made between August 15&nbsp;and September 15&nbsp;are eligible for participation. Shop on&nbsp;FunPay and loot away!"
        ></Instructions>

        <Faq
            title="Questions?"
            items={faq}
        ></Faq>
    </div>

    <Fragment slot="modals">
